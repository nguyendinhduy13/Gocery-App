<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.admin.ui.statistic.StatisticFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_background"
        >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/header_statistic"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:id="@+id/text_header"
        android:padding="15dp"
        android:textStyle="bold"
        android:background="@color/white"
        tools:ignore="MissingConstraints" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_header"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/text_overview"
                android:text="Overview"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="17dp"
                app:layout_constraintStart_toStartOf="parent"
                android:padding="15dp"
                tools:ignore="MissingConstraints" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corner"
                android:id="@+id/layout_revenue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@+id/text_overview"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Revenue"
                    android:id="@+id/text_revenue"
                    android:textSize="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textColor="@color/black"
                    tools:ignore="MissingConstraints" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:id="@+id/line_statistic"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/text_revenue"
                    android:background="@color/gray_very_light"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/shop_revenue"
                    app:layout_constraintTop_toBottomOf="@+id/line_statistic"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:textSize="20dp"
                    android:layout_marginTop="2dp"
                    android:textStyle="bold"
                    android:textColor="@color/orange_heavy"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:id="@+id/wrap_transactions"
                app:layout_constraintTop_toBottomOf="@+id/layout_revenue"
                >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                app:layout_constraintWidth_percent="0.45"
                android:layout_height="110dp"
                tools:ignore="MissingConstraints"
                android:id="@+id/layout_transactions"
                android:padding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                android:background="@drawable/rounded_corner"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Transactions"
                    android:textSize="15dp"
                    android:id="@+id/text_transactions"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"

                    />
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:id="@+id/line_transactions"
                    android:layout_margin="5dp"
                    app:layout_constraintTop_toBottomOf="@id/text_transactions"
                    android:background="@color/black"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/amount_transaction"
                    android:textColor="@color/black"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:layout_margin="20dp"
                    app:layout_constraintTop_toBottomOf="@id/line_transactions"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

              <androidx.constraintlayout.widget.ConstraintLayout
                  android:layout_width="0dp"
                  app:layout_constraintWidth_percent="0.45"
                  android:layout_height="110dp"
                  android:paddingTop="12dp"
                  android:paddingBottom="12dp"
                  android:paddingLeft="6dp"
                  android:paddingRight="6dp"
                  android:layout_marginRight="15dp"
                  android:background="@drawable/rounded_corner"
                  app:layout_constraintEnd_toEndOf="parent"
                  tools:ignore="MissingConstraints">

                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/status_finished"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="10dp"
                      >
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Finished"
                          android:textColor="@color/button_color"
                          android:textSize="15dp"
                          />

                      <TextView
                          android:id="@+id/finished_amount"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textSize="15dp"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintEnd_toEndOf="parent" />
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/status_inprogress"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@id/status_finished"
                      >
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="In progress"
                          android:textColor="@color/orange_heavy"
                          android:textSize="15dp"
                          />

                      <TextView
                          android:id="@+id/inprogress_amount"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:textColor="@color/black"
                          android:textSize="15dp"
                          app:layout_constraintBottom_toBottomOf="parent"
                          app:layout_constraintEnd_toEndOf="parent" />
                  </androidx.constraintlayout.widget.ConstraintLayout>
                  <androidx.constraintlayout.widget.ConstraintLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/status_cancelled"
                      app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:layout_marginTop="10dp"
                      app:layout_constraintTop_toBottomOf="@+id/status_inprogress"
                      >
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:text="Cancelled"
                          android:textColor="@color/red_light"
                          android:textSize="15dp"
                          />
                      <TextView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:id="@+id/cancelled_amount"
                          app:layout_constraintEnd_toEndOf="parent"
                          android:textColor="@color/black"
                          android:textSize="15dp"
                          />
                  </androidx.constraintlayout.widget.ConstraintLayout>

              </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/user_and_products"
                android:layout_marginTop="15dp"
                app:layout_constraintTop_toBottomOf="@+id/wrap_transactions"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    app:layout_constraintWidth_percent="0.4"
                    android:layout_height="100dp"
                    android:layout_marginLeft="15dp"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/user_amount"
                    android:background="@drawable/rounded_corner"
                    tools:ignore="MissingConstraints">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Users"
                        android:id="@+id/text_users"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/line_users"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@id/text_users"
                        android:background="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/user_amount_statistic"
                        android:textSize="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/line_users"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/icon_statistic"
                    android:layout_marginHorizontal="20dp"
                    app:layout_constraintStart_toEndOf="@+id/user_amount"
                    app:layout_constraintEnd_toStartOf="@+id/product_statistic"
                    android:background="@drawable/ic_statistic_green_24dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_marginRight="15dp"
                    android:padding="10dp"
                    app:layout_constraintWidth_percent="0.4"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/product_statistic"
                    android:background="@drawable/rounded_corner"
                    android:layout_height="100dp"
                    tools:ignore="MissingConstraints">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Products"
                        android:id="@+id/text_products"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:textSize="15dp"
                        android:textColor="@color/black"
                        tools:ignore="MissingConstraints" />
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/line_products"
                        android:layout_margin="5dp"
                        app:layout_constraintTop_toBottomOf="@id/text_products"
                        android:background="@color/black"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/amount_products"
                        android:textSize="20dp"
                        app:layout_constraintTop_toBottomOf="@+id/line_products"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:padding="20dp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:id="@+id/line_statistic1"
                android:layout_marginVertical="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/user_and_products"
                android:background="@color/black"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Explore detail"
                android:textColor="@color/black"
                android:id="@+id/text_explore"
                android:textStyle="bold"
                android:textSize="17dp"
                app:layout_constraintTop_toBottomOf="@id/line_statistic1"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View statistics by date, month or year."
                android:id="@+id/text_view_statistic"
                android:textColor="@color/black"
                android:textSize="15dp"
                app:layout_constraintTop_toBottomOf="@id/text_explore"
                android:layout_marginTop="5dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="15dp"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                app:layout_constraintTop_toBottomOf="@id/text_view_statistic"
                android:layout_marginTop="15dp"
                tools:ignore="MissingConstraints">

                <Button
                    android:id="@+id/btn_view_date"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:backgroundTint="@color/button_color"
                    android:text="View Date"
                    android:textColor="@color/white"
                    android:textSize="12dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    tools:layout_editor_absoluteY="0dp" />

                <Button
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:backgroundTint="@color/button_color"
                android:text="View Month"
                android:textSize="12dp"
                android:id="@+id/btn_view_month"
                app:layout_constraintEnd_toStartOf="@+id/btn_view_year"
                app:layout_constraintStart_toEndOf="@+id/btn_view_date"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:backgroundTint="@color/button_color"
                android:text="View Year"
                android:textSize="12dp"
                android:id="@+id/btn_view_year"
                app:layout_constraintEnd_toEndOf="parent"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>