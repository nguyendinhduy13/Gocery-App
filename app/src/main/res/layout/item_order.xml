<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_wrapper"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="@dimen/margin_medium"
    android:background="?android:selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textview_status"
            style="@style/Grocer.BodyTextMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/green_bright"
            android:paddingHorizontal="@dimen/padding_small"
            android:paddingVertical="@dimen/padding_extra_small"
            android:text="Waiting for Payment" />

        <TextView
            android:id="@+id/textview_createdAt"
            style="@style/Grocer.LabelSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="06/12/2022"
            android:textAlignment="textEnd" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_extra_medium">

            <TextView
                style="@style/Grocer.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_order_title_id" />

            <TextView
                android:id="@+id/textview_order_id"
                style="@style/Grocer.BodyTextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#321DERS" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/padding_extra_small"
            android:paddingTop="@dimen/padding_extra_medium">

            <TextView
                style="@style/Grocer.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_order_title_address" />

            <TextView
                android:id="@+id/textview_address"
                style="@style/Grocer.BodyTextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="My Home" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingTop="@dimen/padding_extra_medium">

            <TextView
                style="@style/Grocer.LabelMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item_order_title_total_payment" />

            <TextView
                android:id="@+id/textview_total_payment"
                style="@style/Grocer.BodyTextMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="421,434,431 VND" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>